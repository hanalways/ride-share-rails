<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |field, message| %>
      <li>
        <strong><%= field.capitalize %>: </strong><%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @trip, class: 'trip-form' do |f| %>

  <%= f.label :date %>:
<%= f.text_field :date %>

<%= f.label :name %>:
<%= f.select :passenger_id, Passenger.all.map{ |pass| [pass.name, pass.id] } %>


<%= f.label :cost %>:
<%= f.text_field :cost %>

<%= f.submit action_type, class: "trip-form-submit-button" %>

<% end %>
