<h2>Trip #<%= @trip.id %></h2>
<table>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Driver</th>
    <th>Passenger</th>
    <th>Price</th>
    <th>Rating</th>
    <th>Delete</th>
    <th>Edit</th>
    <th>Complete Ride</th>
  </tr>
  <tr>
    <td><%= link_to @trip.id, trip_path(@trip.id) %></td>
    <td><%= @trip.date %></td>
    <%# passenger and driver %>
    <% if @trip.driver %>
      <td><%= link_to "#{@trip.driver.name}", driver_path(@trip.driver.id) %></td>
    <% else %>
      <td>Inactive Driver</td>
    <% end %>
    <% if @trip.passenger %>
      <td><%= link_to "#{@trip.passenger.name}", passenger_path(@trip.passenger.id) %></td>
    <% else %>
      <td>Inactive Passenger</td>
    <% end %>
    <td><%= @trip.cost%></td>
    <td><%= @trip.rating %></td>
    <td><%= link_to "Delete", trip_path(@trip.id), method: :delete, data: { confirm: "Do you want to delete this trip?" } %></td>
    <td><%= link_to "Edit", edit_trip_path %></td>
    <% if @trip.passenger.on_trip == true %>
      <td><button type="button">Complete</button></td>
      <%# just for reference %>
    <% end %>
  </tr>
</table>
