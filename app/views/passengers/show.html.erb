<section class="header">
  <ul>
    <li>
      <img src="http://placekitten.com/150/150">
    </li>
    <li>
      <%= @passenger.name %>
    </li>
    <li>
      <%= @passenger.phone_num %>
    </li>
  </ul>
  <button type="button">Request Ride</button>
</section>

<h2>Trips</h2>
<table>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Driver</th>
    <th>Passenger</th>
    <th>Price</th>
    <th>Rating</th>
    <th>Delete</th>
    <th>Edit</th>
  </tr>
  
  <% @trips.each do |trip| %>
    <tr>
      <td><%= link_to trip.id, trip_path(trip.id) %></td>
      <td><%= trip.date %></td>
      <td><%= link_to trip.driver.name, trip_path(trip.driver_id) %></td>
      <td><%= link_to trip.passenger.name, trip_path(trip.passenger_id) %></td>
      <td><%= trip.cost %></td>
      <td><%= trip.rating %></td>
      <td><%= link_to "Delete", trip_path(trip), method: :delete, data: { confirm: "Do you want to delete this trip?" } %></td>
      <td><%= link_to "Edit", edit_trip_path %></td>
    </tr>
  <% end %>
</table>


<aside>
  <ul>
    <li>
      <%= link_to "Edit", edit_passenger_path %>
    </li>
    <li>
      <%= link_to "Delete", passenger_path(@passenger.id), method: :delete, data: { confirm: "Do you wish to delete #{@passenger.name}?" } %>
    </li>
  </ul>
</aside>